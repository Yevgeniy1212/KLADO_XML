
Процедура ПередЗаписью(Отказ)
	Наименование = Строка(Организация) + "-" + Строка(СтатьяЗатрат) 
					+ ?(ЗначениеЗаполнено(ПодразделениеОрганизации),  "-" + Строка(ПодразделениеОрганизации), "")
					+ ?(ЗначениеЗаполнено(Контрагент),  "-" + Строка(Контрагент), "")
					+ ?(ЗначениеЗаполнено(ДоговорИзУчетнойСистемы),  "-" + Строка(ДоговорИзУчетнойСистемы), "")
					+ ?(ЗначениеЗаполнено(НоменклатурнаяГруппа),  "-" + Строка(НоменклатурнаяГруппа), "") ;
